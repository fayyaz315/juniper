<div class="section-header">
   <div class="container">
   {% if section.settings.title != blank %}
      <h2>{{ section.settings.title }}</h2>
   {% endif %}
   </div>
</div>
{% if section.blocks.size > 0 %}
<div class="row">
{% for block in section.blocks %}
   <div class="col-md-30 no-padding">
   {% if block.settings.link != blank %}
         <a href="{{ block.settings.link }}" class="brands-love-block" style="background-image:url({{ block.settings.image | img_url: '1200x'}});"></a>
      {% else %}
         <div class="brands-love-block" style="background-image:url({{ block.settings.image | img_url: '1200x'}});"></div>
   {% endif %}
   </div>
{% endfor %}
</div>
{% endif %}
{% if section.settings.link_text != blank and section.settings.link != blank %}
   <a href="{{ section.settings.link }}" class="btn btn-primary view-brands">{{ section.settings.link_text }}</a>
{% endif %}
{% schema %}
   {
      "name":"collection image blocks",
      "class":"brands-love",
      "settings":[
         {
            "type":"text",
            "id":"title",
            "label":"Title",
            "default":"_BRANDS <em>we</em> LOVE"
         },
         {
            "type":"text",
            "id":"link_text",
            "label":"Link Text",
            "default":"view all brands"
         },
         {
            "type":"url",
            "id":"link",
            "label":"Link"
         }
      ],
      "blocks":[
         {
            "type":"collection",
            "name":"collection",
            "settings":[
               {
                  "type":"image_picker",
                  "id":"image",
                  "label":"Image"
               },
               {
                  "type":"url",
                  "id":"link",
                  "label":"Link"
               }
            ]
         }
      ]
   }
{% endschema %}