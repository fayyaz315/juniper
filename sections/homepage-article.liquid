<div class="homepage-articles">
  <div class="container">
    <div class="article-blocks">
      {% for block in section.blocks %}
        <div class="homepage-article-single" data-aos="{{ section.settings.animation_blog }}">
          {% if block.settings.image != blank %}
          <div class="block" style="background-image:url({{ block.settings.image | img_url: '600x'}})"></div>
          {% endif %}
          {% if block.settings.title != blank %}
          <h3>{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.heading != blank %}
          <h4>{{ block.settings.heading }}</h4>
          {% endif %}
          {% if block.settings.text != blank %}
          <p>{{ block.settings.text }}</p>
          {% endif %}
          {% if block.settings.link_text != blank %}
          <a href="{{ block.settings.url }}">{{ block.settings.link_text }}</a>
          {% endif %}        
        </div>
      {% endfor %}       
      </div>
  </div>  
</div>
<script>
  $('.homepage-articles .article-blocks').slick({
    infinite: false,
    speed: 300,
    slidesToShow: 3,
    slidesToScroll: 1,
    responsive: [
      // {
      //   breakpoint: 1024,
      //   settings: {
      //     slidesToShow: 3,
      //     slidesToScroll: 3,
      //     infinite: true,
      //     dots: true
      //   }
      // },
      {
        breakpoint: 992,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
  });
</script>
