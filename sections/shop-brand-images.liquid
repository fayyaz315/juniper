<div class="section-header">
   <div class="">
   {% if section.settings.title != blank %}
      <h2 data-aos="{{ section.settings.animation_title }}">{{ section.settings.title }}</h2>
   {% endif %}
   </div>
</div>
{% if section.blocks.size > 0 %}
<div class="row">
{% for block in section.blocks %}
   <div class="col-md-30 no-padding" data-aos="{{ block.settings.animation_block }}">
   {% if block.settings.link != blank %}
         <a href="{{ block.settings.link }}" class="brands-love-block" style="background-image:url({{ block.settings.image | img_url: '1200x'}});">
            {% if block.settings.title  != blank %}
               <h2>{{ block.settings.title }}</h2>
            {% endif %}
         </a>
      {% else %}
         <div class="brands-love-block" style="background-image:url({{ block.settings.image | img_url: '1200x'}});"></div>
   {% endif %}
   </div>
{% endfor %}
</div>
{% endif %}
{% if section.settings.link_text != blank and section.settings.link != blank %}
   <a href="{{ section.settings.link }}" class="btn btn-primary view-brands">{{ section.settings.link_text }}</a>
{% endif %}
