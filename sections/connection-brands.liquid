<div class="connect-brand brands-love">
    <div class="section-header">
      <div data-aos="{{ section.settings.title_animation }}" class="container">
          {% if section.settings.title != blank %}
          <h2>
          {{ section.settings.title }}
          </h2>
          {% endif %}
      </div>
    </div>
    <div class="row">
    {% if image_1 != blank %}
      <div data-aos="{{ section.settings.collection_1_image_animation }}" class="col-md-30 no-padding">
        <a href="{{link1}}" class="brands-love-block block-1" style="background-image: url('{{image_1 }}')">
          <h2>Brand Name 1</h2>
        </a>
      </div>
      {% endif %}
    {% if image_2 != blank %}
      <div data-aos="{{ section.settings.collection_2_image_animation }}" class="col-md-30 no-padding">
        <a href="{{link2}}" class="brands-love-block block-2" style="background-image: url('{{image_2 }}')">
          <h2>Brand Name 2</h2>
        </a>
      </div>
      {% endif %}
    </div>
    {% if section.settings.link_url != blank and section.settings.button_text != blank %}
    <a data-aos="{{ section.settings.button_animation }}" href="{{section.settings.link_url}}" class="btn btn-primary view-brands">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
