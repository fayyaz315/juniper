<div class="container">
{% if section.settings.title != blank %}
   <div class="section-header">
      <h2 data-aos="{{ section.settings.animation_title }}">{{ section.settings.title }}</h2>
   </div>
{% endif %}
{% if section.blocks.size > 0 %}
   <div class="row">
   {% for block in section.blocks %}
      <div class="col-lg-15 col-sm-30 col-60 collection-grid-main">
         <a href="{{ block.settings.link }}" data-aos="{{ block.settings.animation }}">
            <div class="collection-grid-item">
            </div>
            <div class="collection-grid__text collection-grid__text-below text-center">
            {% if block.settings.title contains '<br>' %}
            {% assign title_parts = block.settings.title | split: '<br>' %}
            {% for title_part in title_parts %}
               {% unless forloop.index == 1 %}
                  <br>
               {% endunless %}
               <h3>{{ title_part }}</h3>
            {% endfor %}
               {% else %}
                  <h3>{{ block.settings.title }}</h3>
            {% endif %}
            </div>
         </a>
      </div>
   {% endfor %}
   </div>
   {% endif %}
</div>
