<div class="container">
	<div class="testimonial-slider">
      {% for block in section.blocks %}
      <div class="block" data-aos="{{ section.settings.animation }}">
			<div class="block-inner">
				<h2 class="line1">{{ block.settings.title }}‚Äù {% if block.settings.name %}<span>{{ block.settings.name }}</span>{% endif %}</h2>
			</div>
		</div>
      {% endfor %}
	</div>
</div>
{% unless section.blocks.size > 0 %}
   <style>
      .wellness-quote {
         display:none;
      }
   </style>
{% endunless %}
<script>
   $('.testimonial-slider').slick({
      dots: false,
      infinite: false,
      speed: 300,
      slidesToShow: 1,
      slidesToScroll: 1,
      //   autoplay: true,
   });
</script>
